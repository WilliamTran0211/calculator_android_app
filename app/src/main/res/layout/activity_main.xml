<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtScreen"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="60dp"

        android:background="#000000"
        android:textColor="#FFFFFF"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/btnAC"
        android:layout_margin="20dp"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_red"
        android:text="ac"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtScreen"/>

    <Button
        android:id="@+id/btnSevent"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="7"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAC"/>

    <Button
        android:id="@+id/btnEight"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="8"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btnSevent"
        app:layout_constraintTop_toBottomOf="@id/btnAC"/>

    <Button
        android:id="@+id/btnNine"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="9"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btnEight"
        app:layout_constraintTop_toBottomOf="@id/btnAC"/>

    <Button
        android:id="@+id/btnFour"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="4"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSevent"/>

    <Button
        android:id="@+id/btnFive"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="5"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btnFour"
        app:layout_constraintTop_toBottomOf="@id/btnEight"/>

    <Button
        android:id="@+id/btnSix"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="6"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btnFive"
        app:layout_constraintTop_toBottomOf="@id/btnNine"/>
    <Button
        android:id="@+id/btnOne"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFour"/>

    <Button
        android:id="@+id/btnTwo"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="2"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btnOne"
        app:layout_constraintTop_toBottomOf="@id/btnFive"/>

    <Button
        android:id="@+id/btnThree"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="3"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btnTwo"
        app:layout_constraintTop_toBottomOf="@id/btnSix"/>


    <Button
        android:id="@+id/btnZero"
        android:layout_margin="20dp"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_button_grey"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTwo"/>



    <Button
        android:id="@+id/btnDivided"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_circle_button_orange"
        android:text="/"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/txtScreen"/>


    <Button
        android:id="@+id/btnMultiply"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_circle_button_orange"
        android:text="*"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnNine"
        app:layout_constraintTop_toBottomOf="@id/btnDivided"/>

    <Button
        android:id="@+id/btnMinus"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_circle_button_orange"
        android:text="-"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnSix"
        app:layout_constraintTop_toBottomOf="@id/btnMultiply"/>
    <Button
        android:id="@+id/btnPlus"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_circle_button_orange"
        android:text="+"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnThree"
        app:layout_constraintTop_toBottomOf="@id/btnMinus"/>
    <Button
        android:id="@+id/btnEquals"
        android:layout_margin="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/custom_circle_button_orange"
        android:text="="
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnZero"
        app:layout_constraintTop_toBottomOf="@id/btnPlus"/>


</android.support.constraint.ConstraintLayout>